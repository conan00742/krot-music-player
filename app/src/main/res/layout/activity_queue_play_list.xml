<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.krot.musicplayer.queue.QueuePlayListActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:orientation="horizontal"
        android:background="#37443E">

        <ImageView
            android:id="@+id/icon_exit_queue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_exit_queue"
            android:layout_centerVertical="true"
            android:layout_marginStart="16dp"/>

        <TextView
            android:id="@+id/tv_queue_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Playing Queue"
            android:layout_centerInParent="true"
            android:textColor="#DEDEDE"
            android:textAppearance="?android:attr/textAppearanceMedium" />


    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/playing_queue"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
